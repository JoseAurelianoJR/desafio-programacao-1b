<div class="card">
  <div class="card-block">
    <%= form_tag('/process_now', method: 'post', multipart: true) do %>
      <div class="form-group">
        <label for="textfile">Selecione o arquivo a ser processado:</label>
        <%= file_field_tag 'file_to_process', class: 'form-control', accept: 'text/plain' %>
      </div>
      <div class="form-group">
        <input type="submit" value="Processar Arquivo!" class="btn btn-primary">
      </div>
    <% end %>
  </div>
</div>

<br/>

<div class="card">
  <div class="card-block">
    <div align="right">
      <h3>Receita Bruta = <%= humanized_money_with_symbol @total_balance%></h3>
    </div>
  </div>
</div>

<div class="row">
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>#</th>
        <th>Comprador</th>
        <th>Descrição</th>
        <th>Preço</th>
        <th>Quantidade</th>
        <th>Endereço</th>
        <th>Fornecedor</th>
      </tr>
    </thead>
    <tbody>
      <%@buyers.each do |buyer|%>
        <tr>
          <th scope="row"><%=buyer.id%></th>
          <td><%=buyer.name%></td>
          <td><%=buyer.description%></td>
          <td><%=humanized_money_with_symbol buyer.price_centavos%></td>
          <td><%=buyer.quantity%></td>
          <td><%=buyer.address%></td>
          <td><%=buyer.provider%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
